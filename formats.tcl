proc ::jsonschema::_validateFormat {instance schema validationLocalInfo} {
    upvar validationGlobalInfo validationGlobalInfo

    set instanceType [_getTypeFromHuddle $instance]
    set instanceValue [lindex $instance 1]

    set format [_getValueFromHuddle [dict get $schema format]]

    if {$format eq "regex"} {
        if {[catch {
            regexp -about $instanceValue
        } err]} {
            _throwError "Invalid format" ErrInvalidFormat [dict create instanceValue $instanceValue schemaPath format schemaValue $format found $err]
        }
        return
    }

    if {![dict exists $::jsonschema::_formats $format]} {
        throw {JSONSCHEMA ErrInvalidFormat} "Unknown format: $format"
    }

    set formatInfo [dict get $::jsonschema::_formats $format]
    set formatPattern [dict get $formatInfo regex]
    set formatSwitches [list]
    if {[dict exists $formatInfo switches]} {
        set formatSwitches [dict get $formatInfo switches]
    }
    if {![regexp {*}$formatSwitches $formatPattern $instanceValue]} {
        _throwError "Invalid format" ErrInvalidFormat [dict create instanceValue $instanceValue schemaPath format schemaValue $format]
    }
}
